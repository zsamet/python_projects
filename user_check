isim = str(input("isiminiz nedir? :"))


if (isim == "Samet"):
    print("soyadınızı giriniz.")
    soyadı = str(input("soyadınız nedir? :"))

    if (soyadı == "Çevik"):
        print("yaşınızı giriniz")
        yaş = int(input("yaşınız kaç? :"))

        if (yaş == 18):
            print("Giriş başarılı :D")

        else:
            print("giriş yapamazsınız!!!")
            
    else:
        print("giriş yapamazsınız!!!")       

else:
        print("giriş yapamazsınız!!!")        
